<div class="container">
	<div id="totals">
		<label>Totals</label>
		<h2>Large Loaves:</h2><%= @large_loaves %> loaves * $<%= sprintf('%.2f', @large_price) %> = $<%= sprintf('%.2f', (@large_loaves*@large_price)) %>
		<h2>Small Loaves:</h2><%= @small_loaves %> loaves * $<%=sprintf('%.2f',  @small_price) %> = $<%= sprintf('%.2f', (@small_loaves*@small_price)) %>
		<h2>Handling:</h2>$<%= sprintf('%.2f', @shipping_rate) %> (Set rate to offset the costs of developing this software and other fees associated with it. We apologize for the inconvience!)
		<h1>Total</h1>$<%= sprintf('%.2f', ((@large_loaves*@large_price)+(@small_loaves*@small_price)+(@shipping_rate))) %>

	</div>
  	<script
    src=<%= @paypal_client_url%>>
  	</script>

  	<div id="paypal-button-container"></div>

	<script>
  		paypal.Buttons({
    		createOrder: function(data, actions) {
	      		return actions.order.create({
	        		purchase_units: <%= @units %>
	      		});
    		},
    		onApprove: function(data, actions) {
	      		return actions.order.capture().then(function(details) {
        			window.location.href = "/confirm_purchase";
      			});
    		}
  		}).render('#paypal-button-container');
	</script>
</div>
